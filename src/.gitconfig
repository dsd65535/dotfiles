[include]
	path = ~/.local_gitconfig
[core]
	editor = vim
[alias]
	graphthis = log --oneline --decorate --graph
	graph = graphthis --exclude="mitko/*_bak?" --branches --exclude="*/mitko/*_bak?" --remotes --tags
	graphall = graphthis --all
	unpushed = log --exclude="mitko/*_bak?" --branches --not --remotes --no-walk --decorate --oneline
	unpushedall = log --branches --not --remotes --no-walk --decorate --oneline
	sign = rebase --exec 'git commit --amend --no-edit -n -S' -i
[branch]
	autoSetupRebase = always
[commit]
	gpgSign = true
[gc]
	reflogExpire = never
	reflogExpireUnreachable = never
[gpg]
	program = gpg2
[init]
	defaultBranch = main
[rebase]
	stat = true
	autoSquash = true
	autoStash = true
	missingCommitsCheck = warn
	abbreviateCommands = true
[rerere]
	enabled = true
[tag]
	gpgSign = true
